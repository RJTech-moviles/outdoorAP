 <?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OUTDOORAP.NewPage1"
             Title="NewPage1">

    <ScrollView>
        <VerticalStackLayout>

            <Entry Placeholder="Contraseña Nueva" 
                IsPassword="true" 
                HorizontalOptions="Center"
                FontSize="16"
                VerticalOptions="Center"/>

            <Entry Placeholder="Confirmar contraseña" 
                IsPassword="true" 
                HorizontalOptions="Center"
                FontSize="16"
                VerticalOptions="Center"/>
            
            <!-- eL boton de abajo mandara a la pagina de inicio -->

            <Button Text="Enviar Codigo"  
                HorizontalOptions="Center"
                FontSize="16"
                VerticalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>